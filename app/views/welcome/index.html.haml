.container{'ng-controller'=> 'MainCtrl as ctrl'}
  %h1.visible-xs Extra small screen
  %h1.visible-sm Small screen
  %h1.visible-md Medium screen
  %h1.visible-lg Large screen
  %hr
  .row
    .col-md-5
      .form-group
        %label{for: 'plain-text'} Plain text:
        %textarea{class: 'form-control', rows: 5, id: 'plain-text', 'ng-model'=> 'ctrl.plain'}
    .col-md-2.center.text-center
      .wrapper
        .input-group
          %span.input-group-addon#rot ROT {{ctrl.rot}}
          %input.form-control{type: 'text', 'ng-model'=> 'ctrl.rot', 'aria-describedby'=> 'rot'}
        %button.btn.btn-xs.btn-primary.btn-arrow-left{type: 'button', 'ng-click'=> 'ctrl.decrypt()'} Decrypt
        %button.btn.btn-xs.btn-warning.btn-arrow-right{type: 'button', 'ng-click'=> 'ctrl.encrypt()'} Encrypt
    .col-md-5
      .form-group
        %label{for: 'encrypted-text'} Encrypted text:
        %textarea{class: 'form-control', rows: 5, id: 'encrypted-text', 'ng-model'=> 'ctrl.encrypted'}
  .row
  .row
